[MASTER]
ignore=CVS
disable=C0114, C0115, C0116, W0511, R0903, W0718

[FORMAT]
max-line-length=140

[DESIGN]
max-args=20
max-locals=20
max-returns=15
max-branches=12
max-statements=50
max-parents=7
max-attributes=20
max-public-methods=20

[INDENTATION]
indent-string='  '

[TYPECHECK]

# List of members which are set dynamically and missed by Pylint inference
# system, and so shouldn't trigger E1101 when accessed.
generated-members=numpy.*, torch.*, cv2.*